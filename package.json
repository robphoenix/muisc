{
  "version": "0.1.0",
  "name": "muisc",
  "author": "Rob Phoenix <rob@robphoenix.com>",
  "module": "dist/muisc.esm.js",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "format": "prettier --write \"./{src,docs}/**/*.{ts,tsx,md,mdx}\"",
    "format:ci": "prettier --list-different \"./src/**/*.{tsx,ts}\"",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "docz:serve": "docz build && docz serve",
    "docz:clean": "rimraf ./docz/.cache"
  },
  "dependencies": {
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "@material-ui/core": "^5.0.0-alpha.22",
    "assert": "^2.0.0",
    "docz": "^2.3.1",
    "react-keyed-flatten-children": "^1.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@size-limit/preset-small-lib": "^4.9.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "pinst": "^2.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "size-limit": "^4.9.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "lint-staged": {
    "./{src,docs}/*.{ts,tsx,md,mdx}": [
      "yarn format"
    ],
    "./{src,docs}/*.{ts,tsx}": [
      "yarn lint"
    ],
    "./{src,docs}/*.{ts,tsx,md,mdx}": [
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "size-limit": [
    {
      "path": "dist/muisc.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/muisc.esm.js",
      "limit": "10 KB"
    }
  ]
}
